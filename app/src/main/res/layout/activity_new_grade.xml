<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lt_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".CadastraNota">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:alpha=".40"
        android:contentDescription="@string/descrUSJT"
        android:src="@drawable/usjtflat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/Branco">

        <TextView
            android:id="@+id/tv_matter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastramentoNome"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/AzulMedio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:typeface="normal" />

        <EditText
            android:id="@+id/etMatter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/AzulMedio"
            android:textSize="25dp"
            android:gravity="bottom|center_horizontal"
            android:ems="10"
            android:inputType="text"
            android:maxLength="22" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:background="@color/Branco"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_new_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/cadastramentoNota"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/AzulMedio"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/et_new_grade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:gravity="bottom|center_horizontal"
            android:clickable="false"
            android:editable="false"
            android:textColor="@color/AzulMedio"
            android:ems="10"
            android:maxLength="3"
            android:textSize="45sp"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bt_persist_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fab_button_margin_bottom"
        android:src="@drawable/fab_check"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_anchor="@id/lt_coordinator"
        app:layout_anchorGravity="bottom|center"
        app:pressedTranslationZ="12dp" />

</android.support.design.widget.CoordinatorLayout>