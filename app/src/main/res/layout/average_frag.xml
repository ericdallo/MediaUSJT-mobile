<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lt_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:alpha=".50"
        android:contentDescription="@string/descrUSJT"
        android:src="@drawable/usjtflat" />

    <fragment
        android:id="@+id/logic_frag"
        android:name="com.mediausjt.fragment.LogicFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/logic_frag" />

    <fragment
        android:id="@+id/new_grade_frag"
        android:name="com.mediausjt.fragment.NewGradeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/new_grade_frag" />

</android.support.design.widget.CoordinatorLayout>